    Default: "due_eventdb"
  DUES3DataLakeName:
    Type: String
    Description: Location of the Digital User Engagement Events Database S3 bucket.  Use CloudFormation output paramter 'DUES3DataLakeName'.  Leave empty to skip deploying sample events.
  DeploySampleEvents:
    Type: String
    Description: Indicate whether sample/fictitious event data should be loaded into the Digital User Engagement Events Database S3 bucket for demonstration purposes.
