      - 'Yes'
      - 'No'
  VPCId:
    Type: AWS::EC2::VPC::Id
    Description: "Select the VPC to deploy the SageMaker notebook instance."
  VPCPubSub:
    Type: AWS::EC2::Subnet::Id
    Description: "Select the Subnet Id for the notebook instance."

